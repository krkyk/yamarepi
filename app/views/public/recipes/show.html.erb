<div class="container">
  <div class="col-lg-offset-2 col-xs-offset-1">
    <div class="row">
      <div class="col">
        <h5 class="midashi pl-3 pr-4 my-5">
          <%=@recipe.title%>
        </h5>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-6 col-md-10 col-lg-3 my-3 mx-auto">
        <%= image_tag @recipe.get_recipe_image(250,250),class: "recipe-image"%>
      </div>
      <div class="col-sm-6 offset-sm-4 col-md-8 col-lg-6 offset-md-1 pt-lg-3">
        <p><%= @recipe.description%></p>
        <p>
          <%= link_to customer_path(@recipe.customer) do%>
          <%= image_tag @recipe.customer.get_customer_image(40,40),class: "rounded-circle"%>
          <%= @recipe.customer.name%>
          <% end %>
        </p>
        <p>
          <%= @recipe.created_at.strftime('%Y/%m/%d') %>
          <span class="favorite-btn-<%=@recipe.id%>"><%= render"public/favorites/favorites",recipe:@recipe%></span>
        </p>
        <h6>材料（<%= @recipe.serving %>人前）</h6>
        <table class="table table-borderless">
          <tbody>
            <% @ingredients.each do |ingredient|%>
            <tr>
              <td><%= ingredient.content%></td>
              <td><%= ingredient.quantity%></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div class="row">
      <div class="col-sm-10 col-md-8 col-lg-8 mx-auto">
      <h6>作り方</h6>
      <table class="table table-borderless">
        <tbody>
          <% @steps.each do |step|%>
          <tr>
            <td><%= step.step_description %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>

  </div>
</div>
