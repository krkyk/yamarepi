<div class="container">
  <div class="row">
    <div class="col-12 col-lg-10">
      <h5 class="midashi pl-3 pr-4 mt-5">
        ”<%= @tag.name %>”のレシピ一覧
      </h5>
      <p class="m-2 px-3">全<span class="recipe-count"><%= @tag.recipes.count %></span>件見つかりました！</p>
    </div>
  </div>

  <% if customer_signed_in? %>
    <div class="row">
      <div class="col-12 col-md-12 my-2 ml-3">
        <ul class="nav nav-pills">
          <li class="nav-item">
            <%= link_to search_tag_recipes_path(tag_id: @tag.id,latest: true) ,class: "nav-link blue-nav" do %>
              <i class="fas fa-star"></i> 新着順
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to search_tag_recipes_path(tag_id: @tag.id,favorite: true) ,class: "nav-link yellow-nav mx-2" do %>
              <i class="fas fa-crown"></i> 人気順
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to search_tag_recipes_path(tag_id: @tag.id,week_favorite: true) ,class: "nav-link green-nav" do %>
              <i class="fas fa-crown"></i> 週間人気順
            <% end %>
          </li>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="card-list-container">
    <div class="row">
      <%=render"recipes",recipes: @recipes%>
    </div>
  </div>

  <div class="row my-3">
    <div class="mx-auto"><%= paginate @recipes %></div>
  </div>
</div>
