<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="midashi pl-3 pr-4 mt-5">
        レシピ一覧
      </h5>
    </div>
  </div>

  <% if customer_signed_in? %>
  <div class="row">
    <div class="col-md-12 my-2 ml-3">
      <ul class="nav nav-pills">
        <li class="nav-item">
          <%= link_to recipes_path(latest: true) ,class: "nav-link blue-nav" do %>
            <i class="fas fa-star"></i> 新着順
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to recipes_path(favorite: true) ,class: "nav-link yellow-nav mx-2" do %>
            <i class="fas fa-crown"></i> 人気順
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to recipes_path(week_favorite: true) ,class: "nav-link green-nav" do %>
            <i class="fas fa-crown"></i> 週間人気順
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <% end %>

  <div class="card-list-container">
    <div class="row">
      <%=render"recipes",recipes: @recipes%>
    </div>
  </div>

  <div class="row my-3">
    <div class="mx-auto"><%= paginate @recipes %></div>
  </div>
</div>
