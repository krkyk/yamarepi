<div class="container">
  <div class="low">
    <div class="col-xs-12 col-md-12 col-lg-10 mx-auto">
    <div class="swiper my-4">
      <div class="swiper-wrapper">
        <div class="swiper-slide"><%= image_tag"mountain.jpg",class: "swiper-image" %></div>
        <div class="swiper-slide"><%= image_tag"mountain3.jpg",class: "swiper-image" %></div>
        <div class="swiper-slide"><%= image_tag"flower2.jpg",class: "swiper-image" %></div>
        <div class="swiper-slide"><%= image_tag"mountain4.jpg",class: "swiper-image" %></div>
