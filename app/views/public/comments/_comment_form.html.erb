  <div class="col-sm-6 col-md-5 col-lg-4">
    <%=form_with(model:[recipe,comment],local: false) do |f|%>
      <div class="form-group">
        <%= f.file_field :comment_image, accept: 'image/*' %>
      </div>
      <div class="row">
      <div class="form-group col-sm-10 col-md-11 col-md-11">
        <%=f.text_area :comment, rows: "2", placeholder: "コメントはこちら" ,class: "form-control"%>
      </div>
      <div class="form-group col-sm-2 col-md-1 col-lg-1 d-flex align-items-center">
        <%=f.submit"送信",class: "btn btn-sm btn-warning"%>
      </div>
      </div>
    <%end%>
  </div>

