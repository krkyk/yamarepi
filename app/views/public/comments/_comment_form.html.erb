<%=form_with(model:[recipe,comment],local: false) do |f|%>
  <div class="form-group">
    <%= f.file_field :comment_image, accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%=f.text_area :comment, rows: "2", placeholder: "コメントはこちら" ,class: "form-control"%>
    <%= f.hidden_field :customer_id, :value => current_customer.id %>
  </div>
  <div class="form-group text-right">
    <%=f.submit"送信",class: "btn btn-sm btn-primary"%>
  </div>
<%end%>


