<% if recipe.favorited_by?(current_customer) %>
  <%= link_to recipe_favorites_path(recipe),method: :delete,remote: true, class: "fav-link" do %>
    <i class="fas fa-heart" style="color:red;" aria-hidden="true"></i><%= recipe.favorites.count %>いいね
  <% end %>
<% else %>
  <%= link_to recipe_favorites_path(recipe),method: :post,remote: true, class: "fav-link2" do %>
    <i class="fas fa-heart" aria-hidden="true"></i><%= recipe.favorites.count %>いいね
  <% end %>
<% end %>