<% my_recipes.each do |recipe| %>
  <%= link_to recipe_path(recipe.id), class: "btn-link" do %>
    <div class="recipe-link">
      <%#= image_tag recipe.get_recipe_image ,size:"130x180"%>
      <div class="recipe-body">
        <p class="text-muted"><%= recipe.created_at.strftime('%Y/%m/%d') %></p>
        <h5 class="recipe-title"><%=recipe.title%></h5>
        <p class="recipe-description"><%=recipe.description%></p>
      </div>
    </div>
  <% end %>
<%end%>