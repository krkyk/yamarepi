<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="midashi pl-3 pr-4 mt-5">
        お気に入りレシピ一覧
      </h5>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12 my-2">
      <%= link_to "新着順", favorites_path ,class: "btn btn-sm btn-outline-danger" %>
      <%= link_to "人気順", favorites_path(order: :desc) ,class: "btn btn-sm btn-outline-primary" %>
    </div>
  </div>

  <div class="card-list-container">
    <div class="row">
      <%=render"public/recipes/recipes",recipes: @favorite_recipes%>
    </div>
  </div>

  <div class="row my-3">
    <div class="mx-auto"><%= paginate @favorite_recipes %></div>
  </div>
</div>
