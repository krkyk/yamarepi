<div class="container">
<div class="error-message"><%= render "layouts/error", obj: @customer %></div>
  <div class="row">
    <div class="col">
      <h5 class="midashi pl-3 pr-4 mt-5">
        会員情報編集
      </h5>
    </div>
  </div>
  <div class="row">
    <div class="text-center col-xs-12 col-md-5 col-lg-5 mt-5">
      <%= image_tag @customer.get_customer_image(500,500),class: "customer-image" %>
      <h5 class="text-center customer-text"><i class="far fa-user"></i><%= @customer.name %></h5>
    </div>
    <div class="col-xs-12 col-md-7 col-lg-7 my-5 pt-lg-3">
      <%= form_with model: @customer,url:admin_customer_path(@customer.id),method: :patch,local: true do |f| %>
      <table class="table table-borderless mb-5">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td><%= f.label:ニックネーム %></td>
            <td><%= f.text_field:name, class: "form-control" %></td>
          </tr>
          <tr>
            <td><%= f.label:メールアドレス%></td>
            <td><%= f.email_field:email, class: "form-control" %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, false %>有効  <%= f.radio_button :is_deleted, true %>退会
            </td>
          </tr>
          <tr>
            <td></td>
            <td>
              <%= f.submit "  変更を保存  " ,class: "btn btn-blue"%>
            </td>
          </tr>
        </tbody>
      </table>
      <%end%>
    </div>
  </div>
</div>

