<div class="container">
  <div class="row">
    <div class="col">
      <h5 class="midashi pl-3 pr-4 my-5">
        管理者ログイン
      </h5>
    </div>
  </div>
  <div class="row">
    <div class="mx-auto pb-5">
            <%= form_with model: @admin, url: admin_session_path do |f| %>
              <div class="form-group row">
                <div class="col-5">
                  <%= f.label :メールアドレス %>
                </div>
                <div class="col-7">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email" ,:placeholder=>"sample@example.com",size:40%>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5">
                  <%= f.label :パスワード %>
                </div>
                <div class="col-7">
                  <%= f.password_field :password, autocomplete: "current-password" ,size:40%>
                </div>
              </div>

              <div class="form-group row">
                <div class="col-5"></div>
                <div class="col-7">
                  <%= f.submit "  ログイン  ",class:"btn btn-primary"%>
                </div>
              </div>
            <% end %>
    </div>
  </div>
</div>
